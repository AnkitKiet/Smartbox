<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:id="@+id/view"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Your Session"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:layout_alignTop="@+id/view"
            android:layout_alignLeft="@+id/btnFind"
            android:layout_alignStart="@+id/btnFind"
            android:layout_marginTop="32dp" />


        <Spinner
            android:id="@+id/spinSession"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp">
        </Spinner>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Your Exam"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:layout_alignTop="@+id/view"
            android:layout_alignLeft="@+id/btnFind"
            android:layout_alignStart="@+id/btnFind"
            android:layout_marginTop="82dp" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinExam"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/spinSession"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="32dp"/>

    </android.support.v7.widget.CardView>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/btnFind"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true" />


</RelativeLayout>